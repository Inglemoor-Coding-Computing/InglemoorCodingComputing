<div class="py-4 px-2 my-3 rounded-2xl border border-gray-300 text-slate-900 dark:text-slate-200">
    <div class="font-semibold text-lg">@Meeting.Date.ToString("D"): @Meeting.Name</div>
    <div class="italic">@Meeting.StartTime.ToString("t") / @Meeting.EndTime.ToString("t")</div>
    <div>@Meeting.Details</div>
</div>

@code {
    [Parameter, EditorRequired]
    public Meeting Meeting { get; set; } = null!;

    [Parameter]
    public bool Editable { get; set; }
}
