@page "/authentication/login-failure"

<div class="flex justify-center">
    <div class="flex flex-col text-center text-slate-900 dark:text-slate-200">
        <h2 class="mt-4 mb-3 text-3xl">Login failed</h2>
        <div class="text-lg">
            @Error
        </div>
    </div>
</div>


@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "error")]
    public string? Error { get; set; }
}